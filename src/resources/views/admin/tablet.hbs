	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header pmd-modal-bordered">
				<h2 class="pmd-card-title-text">Thêm sản phẩm</h2>
				<button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
			</div>
			<div class="modal-body">
				<form id="post-form" method="POST" action="/admin/tablet/create" class="form-horizontal">
					<div class="form-group pmd-textfield pmd-textfield-floating-label">
						<label>Tên thiết bị</label>
						<input type="text" class="mat-input form-control" name="name" value="">
                    </div>
					<div class="form-group pmd-textfield pmd-textfield-floating-label">
						<label class="control-label">Mô tả</label>
						<textarea required class="form-control" name="description"></textarea>
					</div>

                    <div class="row">
                        <div class="col-md-4 form-group pmd-textfield pmd-textfield-floating-label">
                            <label>Giá</label>
                            <input type="text" class="mat-input form-control" name="price" value="">
                        </div>
                        <div class="col-md-8 form-group pmd-textfield pmd-textfield-floating-label">
                            <label>Đường dẫn</label>
                            <input type="text" class="mat-input form-control" name="img" value="">
                        </div>
                    </div>
					
					<div class="form-group pmd-textfield pmd-textfield-floating-label">
						<label>Màn hình</label>
						<input type="text" class="mat-input form-control" name="monitor" value="">
					</div>

                    <div class="row">
                        <div class="col form-group pmd-textfield pmd-textfield-floating-label">
                            <label>Hệ điều hành</label>
                            <input type="text" class="mat-input form-control" name="os" value="">
                        </div>
                        <div class="col form-group pmd-textfield pmd-textfield-floating-label">
                            <label>CPU</label>
                            <input type="text" class="mat-input form-control" name="cpu" value="">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col form-group pmd-textfield pmd-textfield-floating-label">
                            <label>Camera trước</label>
                            <input type="text" class="mat-input form-control" name="front-cam" value="">
                        </div>
                        <div class="col form-group pmd-textfield pmd-textfield-floating-label">
                            <label>Camera sau</label>
                            <input type="text" class="mat-input form-control" name="rear-cam" value="">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col form-group pmd-textfield pmd-textfield-floating-label">
                            <label>RAM</label>
                            <input type="text" class="mat-input form-control" name="ram" value="">
                        </div>
                        <div class="col form-group pmd-textfield pmd-textfield-floating-label">
                            <label>ROM</label>
                            <input type="text" class="mat-input form-control" name="rom" value="">
                        </div>
                        <div class="col form-group pmd-textfield pmd-textfield-floating-label">
                            <label>Pin</label>
                            <input type="text" class="mat-input form-control" name="battery" value="">
                        </div>
                    </div>
				</form>
			</div>
			<div class="modal-footer pmd-modal-action">
				<button id="btn-submit" data-dismiss="modal"  class="btn pmd-ripple-effect btn-primary" type="submit">Thêm</button>
				<button data-dismiss="modal"  class="btn pmd-ripple-effect btn-default" type="button">Huỷ</button>
			</div>
		</div>
	</div>
</div>

<!-- Confirm delete -->
<div id="delete-product-confirm" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xoá sản phẩm</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn có chắc chắn xoá sản phẩm này?</p>
        {{!-- Hidden form to delete course --}}
        <form name="delete-form" method="POST"></form>
      </div>
      <div class="modal-footer">
        <button id="btn-delete" type="button" class="btn btn-danger">Xoá bỏ</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Huỷ</button>
      </div>
    </div>
  </div>
</div>
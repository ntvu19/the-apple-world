<div class="table-responsive text-nowrap mt-4">
    <h1>Quản lí Tablet</h1>
    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Tên thiết bị</th>
                <th scope="col">Mô tả</th>
                <th scope="col">Giá</th>
                <th scope="col">Đường dẫn</th>
                <th scope="col">Màn hình</th>
                <th scope="col">Hệ điều hành</th>
                <th scope="col">Camera trước</th>
                <th scope="col">Camera sau</th>
                <th scope="col">CPU</th>
                <th scope="col">RAM</th>
                <th scope="col">ROM</th>
                <th scope="col" colspan="2">Pin</th>
                
            </tr>
        </thead>
        <tbody>
            {{#each tablets}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.description}}</td>
                <td>{{this.price}}</td>
                <td>{{this.img}}</td>
                <td>{{this.monitor}}</td>
                <td>{{this.os}}</td>
                <td>{{this.front_cam}}</td>
                <td>{{this.rear_cam}}</td>
                <td>{{this.cpu}}</td>
                <td>{{this.ram}}</td>
                <td>{{this.rom}}</td>
                <td>{{this.battery}}</td>
                <td>
                    <button class="btn btn-primary btn-edit" data-id="{{this._id}}" data-toggle="modal" data-target="#edit-form">Sửa</button>
                    <button class="btn btn-default" data-category="tablet" data-id="{{this._id}}" data-toggle="modal" data-target="#delete-product-confirm">Xoá</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<!-- Floating Action Button like Google Material -->
<div class="menu pmd-floating-action"  role="navigation"> 
	<a class="pmd-floating-action-btn btn pmd-btn-fab pmd-btn-raised pmd-ripple-effect btn-primary" data-target="#create-form" data-toggle="modal" data-title="Thêm sản phẩm" href="javascript:void(0);">
		<i class="material-icons pmd-sm">add</i> 
	</a>
</div>

<!-- Edit Form -->
<div tabindex="-1" class="modal fade" id="edit-form" style="display: none;" aria-hidden="true">
    {{#each tablets}}
	<div class="modal-dialog edit-form">
		<div class="modal-content">
			<div class="modal-header pmd-modal-bordered">
				<h2 class="pmd-card-title-text">Sửa sản phẩm</h2>
				<button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
			</div>
			<div class="modal-body">
				<form class="form-horizontal data-edit-form" method="POST" action="/admin/tablet/{{this._id}}?_method=PUT">
					<div class="form-group pmd-textfield pmd-textfield-floating-label">
						<label>Tên thiết bị</label>
						<input type="text" class="mat-input form-control" name="name" value="{{this.name}}">
                    </div>
					<div class="form-group pmd-textfield pmd-textfield-floating-label">
						<label class="control-label">Mô tả</label>
						<textarea class="form-control" name="description">{{this.description}}</textarea>
					</div>

                    <div class="row">
                        <div class="col-md-4 form-group pmd-textfield pmd-textfield-floating-label">
                            <label>Giá</label>
                            <input type="text" class="mat-input form-control" name="price" value="{{this.price}}">
                        </div>
                        <div class="col-md-8 form-group pmd-textfield pmd-textfield-floating-label">
                            <label>Đường dẫn</label>
                            <input type="text" class="mat-input form-control" name="img" value="{{this.img}}">
                        </div>
                    </div>
					
					<div class="form-group pmd-textfield pmd-textfield-floating-label">
						<label>Màn hình</label>
						<input type="text" class="mat-input form-control" name="monitor" value="{{this.monitor}}">
					</div>

                    <div class="row">
                        <div class="col form-group pmd-textfield pmd-textfield-floating-label">
                            <label>Hệ điều hành</label>
                            <input type="text" class="mat-input form-control" name="os" value="{{this.os}}">
                        </div>
                        <div class="col form-group pmd-textfield pmd-textfield-floating-label">
                            <label>CPU</label>
                            <input type="text" class="mat-input form-control" name="cpu" value="{{this.cpu}}">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col form-group pmd-textfield pmd-textfield-floating-label">
                            <label>Camera trước</label>
                            <input type="text" class="mat-input form-control" name="front_cam" value="{{this.front_cam}}">
                        </div>
                        <div class="col form-group pmd-textfield pmd-textfield-floating-label">
                            <label>Camera sau</label>
                            <input type="text" class="mat-input form-control" name="rear_cam" value="{{this.rear_cam}}">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col form-group pmd-textfield pmd-textfield-floating-label">
                            <label>RAM</label>
                            <input type="text" class="mat-input form-control" name="ram" value="{{this.ram}}">
                        </div>
                        <div class="col form-group pmd-textfield pmd-textfield-floating-label">
                            <label>ROM</label>
                            <input type="text" class="mat-input form-control" name="rom" value="{{this.rom}}">
                        </div>
                        <div class="col form-group pmd-textfield pmd-textfield-floating-label">
                            <label>Pin</label>
                            <input type="text" class="mat-input form-control" name="battery" value="{{this.battery}}">
                        </div>
                    </div>
				</form>
			</div>
			<div class="modal-footer pmd-modal-action">
				<button data-dismiss="modal" class="btn pmd-ripple-effect btn-primary btn-edit-form" type="submit">Thêm</button>
				<button data-dismiss="modal"  class="btn pmd-ripple-effect btn-default" type="button">Huỷ</button>
			</div>
		</div>
	</div>
    {{/each}}
</div>

<!-- Create Form -->

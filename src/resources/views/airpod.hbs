<div class="mt-4">
    <div class="row">
        {{#each airpods}}
        <div class="col-sm-6 col-lg-4">
            <div class="card mt-4">
                <img class="card-img-top" src="{{this.img}}">
                <div class="card-body">
                    <h5 class="card-title text-center">{{this.name}}</h5>
                    <p class="card-text text-center">{{this.price}} VNĐ</p>
                    <div class="text-center">
                        <button type="button" class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off">
                            Xem chi tiết
                        </button>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
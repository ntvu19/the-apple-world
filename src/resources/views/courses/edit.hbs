<div class="mt-4">
    <h3>Sửa khoá học</h3>
    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
        <label for="inputName">Tên khoá học</label>
        <input type="text" class="form-control" value="{{course.name}}" name="name">
    </div>
    <div class="form-group">
        <label for="inputDescription">Mô tả</label>
        <input type="text" class="form-control" value="{{course.description}}" name="description">
    </div>
    <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>
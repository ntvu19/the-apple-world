<div class="mt-4">
    <div class="row">
        {{#each macbooks}}
        <div class="col-sm-6 col-lg-4">
            <div class="card mt-4">
                <img class="card-img-top" src="{{this.img}}">
                <div class="card-body">
                    <h5 class="card-title text-center">{{this.name}}</h5>
                    <p class="card-text text-center">{{this.price}} VNĐ</p>
                    <p class="card-text">&bull; Màn hình: {{this.monitor}}</p>
                    <p class="card-text">&bull; RAM: {{this.ram}}, ROM: {{this.rom}}</p>
                    <p class="card-text">&bull; CPU: {{this.cpu}}</p>
                    <p class="card-text">&bull; Pin: {{this.battery}}</p>
                    <div class="text-center">
                        <button type="button" class="btn btn-primary btn-detail" data-target="#detail" data-id="{{this._id}}" data-toggle="modal" aria-pressed="false" autocomplete="off">
                            Xem chi tiết
                        </button>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<div tabindex="-1" class="modal fade" id="detail" style="display: none;" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
                <h2 class="modal-title">Chi tiết sản phẩm</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
			</div>
            {{#each macbooks}}
            <div class="show-detail">
                <div  class="modal-body">
                    <ul class="list-group">
                        <img class="card-img-top" src="{{this.img}}">
                        <div class="card-body">
                            <h5 class="card-title text-center">{{this.name}}</h5>
                            <p class="card-text text-center">{{this.price}} VNĐ</p>
                            <p class="card-text">&bull; Mô tả: {{this.description}}</p>
                            <p class="card-text">&bull; Màn hình: {{this.monitor}}</p>
                            <p class="card-text">&bull; RAM: {{this.ram}}, ROM: {{this.rom}}</p>
                            <p class="card-text">&bull; Pin: {{this.battery}}</p>
                        </div>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary btn-add-to-cart"
                            data-id="{{this._id}}" data-name="{{this.name}}" data-img="{{this.img}}" data-price="{{this.price}}">
                            Thêm vào giỏ hàng
                    </button>
                </div>
            </div>
            {{/each}}
		</div>
	</div>
</div>

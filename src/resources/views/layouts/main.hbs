    <!-- CSS -->
    <style>
        {{!-- Sau này chuyển vào file css riêng --}}
        /* Propeller typography */
        @import "https://opensource.propeller.in/components/typography/css/typography.css";
        /* Propeller button */
        @import "https://opensource.propeller.in/components/button/css/button.css";
